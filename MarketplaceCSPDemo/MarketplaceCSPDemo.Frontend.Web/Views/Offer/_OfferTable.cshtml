@using Microsoft.Store.PartnerCenter.Models.Offers
@model IEnumerable<Offer>
@{
    Layout = null;
}
<table class="table" id="tbl-offer">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string btnId = "btn-addToCart" + @item.Id;
            string btnCreateCustomerId = "btn-createCustomer" + @item.Id;

            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <button id="@btnId" class="btn btn-outline-primary btn-xs" onclick="DCMS.Order.Create('#@btnId','@item.Id','@item.Name')"><span class="fa fa-cart"></span>&nbsp;Buy</button>
                    <button id="@btnCreateCustomerId" class="btn btn-outline-primary btn-xs" onclick="DCMS.Customer.Create('#@btnCreateCustomerId','@item.Id','@item.Name')"><span class="fa fa-cart"></span>&nbsp;Create Customer</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(function() {
        $('#tbl-offer').DataTable();
    })
</script>
